{
    "Description" : "This is a simple Lambda function is NodeJs",
    "Parameters": {      
        "LambdaFunctionName":{
            "Description": "AWS Lambda function name",
            "Type": "String"
        }
      },
    "Resources":{
        "TestLambdaFunction" : {
            "Type" : "AWS::Lambda::Function",
            "Properties" : {
                "FunctionName" : {
                    "Ref": "LambdaFunctionName"
                },
                "Handler" : "index.handler",
                "Role" : { "Fn::GetAtt" : ["TestLambdaExecutionRole", "Arn"] },
                "Code" : {
                    "ZipFile" : { "Fn::Join" : [ "\n", [                        
                        "exports.handler = (event, context, callback) => {",
                        "    var data = event['msg'];",
                        "    callback(null, 'Received: ' + data);",                       
                        "}"
                    ]]}
                },
                "Timeout" : "10",                
                "Runtime" : "nodejs6.10"
            }
        },
        "TestLambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/"
            }
        }
    }
}
